<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="on_click_evento_list">
      <field name="name">on_click_evento_list</field>
      <field name="model">on_click.evento</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="place"/>
          <field name="max_people"/>
          <field name="date_end" widget="remaining_days"/>
          <field name="price" widget="monetary"/>
          <field name="description"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="on_click_evento_form">
      <field name="name">on_click.evento.form</field>
      <field name="model">on_click.evento</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group name="group_top">
              <group name="group_left">       
                <field name="name"/>
                <field name = "place"/>
                <field name="max_people"/>
              </group>
              <group name ="group_right">
                <field name="image" widget="image" class="oe_avatar oe_left"/>
                <field name="date_start" widget="date"/>
                <field name="date_end" widget="date"/>
                <field name="price" widget="monetary"/>
              </group>
              <field name="description"/>
            </group>
          </sheet>       
        </form>
      </field>
    </record>

    
    <record model="ir.actions.act_window" id="on_click_evento_window">
      <field name="name">Evento</field>
      <field name="res_model">on_click.evento</field>
      <field name="view_mode">tree,form</field>


    </record>


