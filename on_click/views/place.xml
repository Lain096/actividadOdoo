<odoo>
  <data>

  <record model="ir.ui.view" id="on_click_place_list">
      <field name="name">on_click_place_list</field>
      <field name="model">on_click.lugar</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="place"/>
          <field name="max_people"/>
          <field name="price"/>
          <field name="description"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="on_click_place_form">
      <field name="name">on_click.place.form</field>
      <field name="model">on_click.lugar</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group name="group_top">
              <group name="group_left">       
                <field name="name"/>
                <group name="group_left">
                  <field name="place"/>
                  <field name="price" widget="monetary"/>
                </group>
                <group name="group_right">
                  <field name="max_people"/>
                </group>
              </group>
              <group name ="group_right">
                <field name="image" widget="image" class="oe_avatar oe_left"/>
              </group> 
              <field name="description"/>         
            </group>
          </sheet>       
        </form>
      </field>
    </record>


     <record model="ir.actions.act_window" id="on_click_place_window">
      <field name="name">place</field>
      <field name="res_model">on_click.lugar</field>
      <field name="view_mode">tree,kanban,form</field>


    </record>

  <record id="on_click_place_kanban" model="ir.ui.view">
        <field name="name">on_click.lugar.kanban</field>
        <field name="model">on_click.lugar</field>
        <field name="arch" type="xml">
            <kanban sample="1" >
                <field name="id"/>
                <field name="name"/>
                <field name="place"/>
                <field name="max_people"/>
                <field name="description"/>
                <progressbar field="activity_state" colors='{"planned": "success", "today": "warning", "overdue": "danger"}'/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                              <div name="div_imagen" class="o_kanban_image me-1">
                                <field name="image" widget="image" class="o_image_64_contain"/>
                              </div>
                            <div name="div_details" class="o_kanban_details">  
                                <div class="o_kanban_record_top mb-0"> 
                                  <div class="o_kanban_record_headings">
                                      <strong class="o_kanban_record_title"><field name="name"/></strong>                            
                                  </div>                                  
                                </div>
                                <div>
                                    <field name="description"/>
                                </div>
                                <div>
                                    Numero m√°ximo de Personas:  <field name="max_people"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>






