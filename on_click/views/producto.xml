<odoo>
  <data>

    <!-- Lista -->
    <record model="ir.ui.view" id="on_click_productp_list">
      <field name="name">Producto list</field>
      <field name="model">on_click.producto</field>
      <field name="arch" type="xml">
        <tree>

        </tree>
      </field>
    </record>

    <!-- Formulario -->
    <record model="ir.ui.view" id="on_click_producto_form">
      <field name="name">Producto form</field>
      <field name="model">on_click.producto</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group name="group_top">

              <group name="group_left">
                <field name="price" widget="monetary"/>
              </group>

              <group name="group_right">
                
              </group>

            </group>
          </sheet>
        </form>
      </field>
    </record>
    
    <!-- Acciones -->
    <record model="ir.actions.act_window" id="producto_action_window">
      <field name="name">Producto</field>
      <field name="res_model">on_click.producto</field>
      <field name="view_mode">tree,form</field>
    </record>

  </data>
</odoo>