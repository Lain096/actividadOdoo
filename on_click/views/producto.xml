<odoo>
  <data>
    <!-- explicit list view definition -->

<record model="ir.ui.view" id="on_click_producto_list">
      <field name="name">on_click_producto_list</field>
      <field name="model">on_click.producto</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="description"/>
          <field name="price"/>
          <!-- <field name="image" /> -->
        </tree>
      </field>
</record>

    <record model="ir.ui.view" id="on_click_producto_form">
      <field name="name">on_click.producto.form</field>
      <field name="model">on_click.producto</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group name="group_top">
              <group name="group_left">       
                <field name="name"/>
                <field name="price"/>
              </group>
              <group name ="group_right">
               <field name="image" widget="image" class="oe_avatar oe_left"/>
              </group>
              <field name="description" placeholder="Escribe la descripción del producto"/>
            </group>

          </sheet>       
        </form>
      </field>
    </record>




     <record id="on_click_producto_kanban" model="ir.ui.view">
        <field name="name">on_click.producto.kanban</field>
        <field name="model">on_click.producto</field>
        <field name="arch" type="xml">
            <kanban sample="1" >
                <field name="id"/>
                <field name="name"/>
                <field name="price"/>
                <progressbar field="activity_state" colors='{"planned": "success", "today": "warning", "overdue": "danger"}'/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                       
                              <div name="div_imagen" class="o_kanban_image me-1">
                                <field name="image" widget="image" class="o_image_64_contain"/>
                              </div>        
                            <div name="div_details" class="o_kanban_details">  
                                <div class="o_kanban_record_top mb-0"> 
                                  <div class="o_kanban_record_headings">
                                      <strong class="o_kanban_record_title"><field name="name"/></strong>                            
                                  </div>                                  
                                </div>
                                <div>
                                    <field name="description"/>
                                </div>
                                <div>                           
                                    Precio:  <field name="price" widget="monetary" options="{'currency_field': 'currency_id'}"/> €
                                </div>                        
                            </div>
                            
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>


    
    <record model="ir.actions.act_window" id="on_click_producto_window">
      <field name="name">Producto</field>
      <field name="res_model">on_click.producto</field>
      <field name="view_mode">tree,kanban,form</field>
    </record>

